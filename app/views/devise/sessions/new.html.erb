<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"})  do |f| %>

        <h2 class="form-signin-heading">Se connecter au KDD !</h2>

        <%= f.label :email, :class => "sr-only" %><br />
        <%= f.email_field :email, :class => "form-control", placeholder: "identifiant", autofocus: true %>

        <%= f.label :password, :class => "sr-only" %><br />
        <%= f.password_field :password, :class => "form-control", placeholder: "Mot de passe", autocomplete: "off" %>


        <% if devise_mapping.rememberable? -%>
          <div class="checkbox">
            <%= f.check_box :remember_me, :class => "check_pimp" %>
            <%= f.label :se_souvenir_de_moi %>
          </div>
        <% end -%>

        <%= f.submit "Connexion", :class => "btn btn-lg btn-primary btn-block" %>

        <%= render "devise/shared/links" %>

<% end %>
