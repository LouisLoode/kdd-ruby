

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signup"}) do |f| %>

    <h2 class="form-signup-heading">Modifier votre profil</h2>

    <%= devise_error_messages! %>

    <%= f.label :name, :class => "sr-only" %><br />
    <%= f.text_field :name, :class => "form-control", autofocus: true %>

    <%= f.label :email, :class => "sr-only" %><br />
    <%= f.email_field :email, :class => "form-control", placeholder: "Adresse e-mail" %>

    <%= f.label :avatar, :class => "sr-only" %><br />
    <%= f.url_field :avatar, :class => "form-control" , placeholder: "URL de votre avatar"%>

    <%= f.label :github, :class => "sr-only" %><br />
    <%= f.url_field :github, :class => "form-control", placeholder: "Github URL" %>

    <%= f.label :website, :class => "sr-only" %><br />
    <%= f.url_field :website, :class => "form-control", placeholder: "Site web URL" %>

    <%= f.label :biography, :class => "sr-only" %><br />
    <%= f.text_area :biography, :class => "form-control", placeholder: "Votre description" %>

  <!-- Ca sert à quoi ça ???? -->
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <%= f.label :biography, :class => "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "newpass form-control", placeholder: "Nouveau mot de passe" %>

    <%= f.label :password_confirmation, :class => "sr-only"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "newpass form-control", placeholder: "Verification du mot de passe" %>

    <%= f.label :current_password, :class => "sr-only"  %> <br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control", placeholder: "Mot de passe actuel" %>
    <small>Entrer votre ancien mot de passe pour sauvegarder les modifications</small>

    <%= f.submit "Enregistrer les modifications", :class => "btn btn-lg btn-primary btn-block" %>

<% end %>

<form class="cancel form-signup">
<h3>Supprimer mon compte</h3>

<p><%= button_to "Supprimer", registration_path(resource_name), :class => "btn", data: { confirm: "Are you sure?" }, method: :delete %></p>

</form>
