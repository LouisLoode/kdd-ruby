

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signup"}) do |f| %>

    <h2 class="form-signup-heading">Edit your Profil</h2>

    <%= devise_error_messages! %>

    <%= f.label :name, :class => "sr-only" %><br />
    <%= f.text_field :name, :class => "form-control", autofocus: true %>

    <%= f.label :email, :class => "sr-only" %><br />
    <%= f.email_field :email, :class => "form-control", placeholder: "Email adress" %>

    <%= f.label :avatar, :class => "sr-only" %><br />
    <%= f.url_field :avatar, :class => "form-control" , placeholder: "Avatar url"%>

    <%= f.label :github, :class => "sr-only" %><br />
    <%= f.url_field :github, :class => "form-control", placeholder: "Github url" %>

    <%= f.label :website, :class => "sr-only" %><br />
    <%= f.url_field :website, :class => "form-control", placeholder: "Website url" %>

    <%= f.label :biography, :class => "sr-only" %><br />
    <%= f.text_area :biography, :class => "form-control", placeholder: "Your biography" %>

  <!-- Ca sert à quoi ça ???? -->
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <%= f.label :biography, :class => "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", placeholder: "New password" %>
      <small>(leave blank if you don't want to change it)</small><br />

    <%= f.label :password_confirmation, :class => "sr-only"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control", placeholder: "Password verification" %>

    <%= f.label :current_password, :class => "sr-only"  %> <br />
    <%= f.password_field :current_password, autocomplete: "off", :class => "form-control", placeholder: "Current password" %>
    <small>(we need your current password to confirm your changes)</small>

    <%= f.submit "Update", :class => "btn btn-lg btn-primary btn-block" %>

<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

<%= javascript_include_tag params[:user] %>
