<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"})  do |f| %>

        <h2 class="form-signup-heading">Sign up</h2>

        <%= devise_error_messages! %>

        <%= f.label :name, :class => "sr-only" %><br />
        <%= f.text_field :name, :class => "form-control", placeholder: "Username", autofocus: true %>

        <%= f.label :email, :class => "sr-only" %><br />
        <%= f.email_field :email, :class => "form-control", placeholder: "Email adress", autofocus: true %>

        <%= f.label :password, :class => "sr-only" %><br />
        <%= f.password_field :password, :class => "form-control", placeholder: "Password", autocomplete: "off" %>

        <%= f.label :password_confirmation, :class => "sr-only" %><br />
        <%= f.password_field :password_confirmation, :class => "form-control", placeholder: "Password verification", autocomplete: "off" %>

        <%= f.submit "Register", :class => "btn btn-lg btn-primary btn-block" %>

        <%= render "devise/shared/links" %>

<% end %>
