<div id="fixfoooter">
<%= link_to "Retour",  url_for(:back), :class => "backback" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"})  do |f| %>

        <h2 class="form-signup-heading">S'inscrire</h2>

        <%= devise_error_messages! %>

        <%= f.label :name, :class => "sr-only" %><br />
        <%= f.text_field :name, :class => "form-control", placeholder: "Identifiant", autofocus: true %>

        <%= f.label :email, :class => "sr-only" %><br />
        <%= f.email_field :email, :class => "form-control", placeholder: "Adresse e-mail", autofocus: true %>

        <%= f.label :password, :class => "sr-only" %><br />
        <%= f.password_field :password, :class => "form-control", placeholder: "Mot de passe", autocomplete: "off" %>

        <%= f.label :password_confirmation, :class => "sr-only" %><br />
        <%= f.password_field :password_confirmation, :class => "form-control", placeholder: "Verification du mot de passe", autocomplete: "off" %>

        <%= f.submit "S'inscrire", :class => "btn btn-lg btn-primary btn-block" %>

        <%= render "devise/shared/links" %>

<% end %>
</div>