<h1>Edit cat</h1>

<%= form_for :cat, url: cat_path(@cat), method: :patch do |f| %>

  <% if @cat.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@cat.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @cat.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :slug %><br>
    <%= f.text_field :slug %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :public %><br>
    <%= f.select :public, [['true', true], ['false', false]] %>
  </p>

  <p>
    <%= f.label :parent_id %><br>
    <%= f.collection_select :parent_id, Cat.where(public: true), :id, :name,
                    :include_blank => "Nothing selected" %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', cats_path %>
