<div class="nomcategorie">
	<img src="/assets/femme.png">
	<p><%= @category.name %></p>
</div>

<div id="part" class="mainmargin container gover">
    <div id="fixprofil" class="row">

        <div class="col-xs-12 col-sm-2 col-md-3">
					<%= render partial: 'shared/widget_categories', locals: {hierarchy: @hierarchy} %>
        </div>

        <div class="col-md-9">
            <div class="row">
                <div id="list_posts_main" class="col-md-7">
					<% if @category.posts.size > 0 %>
					  <% @category.posts.each do |post| %>
					    <%= render partial: 'posts/card', locals: {post: post, user: post.user} %>
					  <% end %>
					<% else %>
						<p class="zerorelation text-center">Il n'y pas pour l'instant aucune publication dans cette cat√©gorie</p>
					<% end %>
                </div>
                <div class="col-md-5">
                  <%= render partial: 'posts/form'%>
                </div>
            </div>
        </div>
    </div>
</div>
