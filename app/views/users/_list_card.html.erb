<div class="boxcard col-md-4">
  <div class="card">
    <div class="picture_profil">
      <img src="<% if user.avatar.present? %>
      <%= user.avatar %>
      <% else %>
      /assets/Avatar_default.png
      <% end %>" />
    </div>
  <div class="desc_profil">
      <p class="name"><%= "@" + user.name %></p>
      <div class="pertinence">
        <p class="text">Pertinence</p>
        <div class="star">
          <% pertinence = user.pertinence %>
          <li class="<% if pertinence >= 1 %>star-full<% else %>star-empty<% end %>"></li>
          <li class="<% if pertinence >= 2 %>star-full<% else %>star-empty<% end %>"></li>
          <li class="<% if pertinence >= 3 %>star-full<% else %>star-empty<% end %>"></li>
          <li class="<% if pertinence >= 4 %>star-full<% else %>star-empty<% end %>"></li>
          <li class="<% if pertinence == 5 %>star-full<% else %>star-empty<% end %>"></li>
        </div>
      </div>
      <p class="partage"><span><%= user.posts.count %></span> Partages de savoir</p>
    </div>

  </div>
</div>
